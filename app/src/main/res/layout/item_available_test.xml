<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/lab_card"
    android:layout_margin="8dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/test_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Critinine Test"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/test_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 840"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/real_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 1200"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toRightOf="@id/test_price"
        app:layout_constraintTop_toBottomOf="@id/test_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="@id/real_price"
        app:layout_constraintRight_toRightOf="@id/real_price"
        app:layout_constraintTop_toTopOf="@id/real_price"
        app:layout_constraintBottom_toBottomOf="@id/real_price"
        android:background="@color/grey"
        />

    <ImageView
        android:id="@+id/add_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:src="@drawable/add_to_cart"
        />



</androidx.constraintlayout.widget.ConstraintLayout>