<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/appointment_card"
    android:layout_margin="16dp">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />
    <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/vertical_one"
            app:layout_constraintTop_toBottomOf="@id/horizontal_two"
            android:text="Name"
            android:textColor="@color/black"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            />

    <TextView
        android:id="@+id/patient_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/vertical_one"
        app:layout_constraintTop_toBottomOf="@id/patient_name"
        android:text="Age"
        android:textColor="@color/blue"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/patient_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/patient_age"
        app:layout_constraintTop_toBottomOf="@id/patient_name"
        android:text="Gender"
        android:textColor="@color/blue"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/total_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/patient_gender"
        android:text="Price"
        android:textColor="@color/grey"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/purple_button"
        app:layout_constraintTop_toBottomOf="@id/patient_age"

        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:text="Confirm"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>